<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0F2F1"
        tools:context=".SefinMenusuKami2">

    <Button
            android:text="@string/random_food"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:id="@+id/randomFoodBtn"
            android:background="#B2DFDB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/selectedFoodTxt" app:layout_constraintHorizontal_bias="0.499"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:id="@+id/selectedFoodTxt"
            android:background="#B2DFDB"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textColorHighlight="#22FFFFFF"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginBottom="240dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.588"/>

    <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:srcCompat="@drawable/next_page_button"
            android:id="@+id/backPageBtn"
            android:background="#22FFFFFF"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/randomFoodBtn"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.347"/>

</androidx.constraintlayout.widget.ConstraintLayout>