<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SefinMenusuKami2">

    <Button
            android:text="@string/next"
            android:layout_width="173dp"
            android:layout_height="44dp"
            android:id="@+id/backPageBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/randomFoodBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="@string/random_food"
            android:layout_width="238dp"
            android:layout_height="54dp"
            android:id="@+id/randomFoodBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="308dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:layout_width="207dp"
            android:layout_height="43dp"
            android:id="@+id/selectedFoodTxt"
            app:layout_constraintBottom_toTopOf="@+id/randomFoodBtn"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:background="@android:color/darker_gray"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" app:layout_constraintVertical_bias="0.083"/>

</androidx.constraintlayout.widget.ConstraintLayout>