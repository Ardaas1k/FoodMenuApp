<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="?attr/colorBackgroundFloating"
        android:hapticFeedbackEnabled="false">

    <EditText
            android:layout_width="245dp"
            android:layout_height="26dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addFoodTxt"
            android:autofillHints="no"
            android:background="@android:color/white" android:textColor="@android:color/black"
            android:textSize="20sp" android:hint="Enter a food name" android:textColorHint="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/list_item"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.46"/>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_item"
            android:layout_width="296dp"
            android:layout_height="334dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="parent"
            android:layout_marginBottom="75dp"/>

    <Button
            android:text="@string/add_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodBtn"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:background="@color/ic_launcher_background"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodTxt" app:layout_constraintStart_toEndOf="@+id/list_item"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/back_page_button"
            android:id="@+id/backPageBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/list_item" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.501" android:background="#FFFFFF"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/load_icon"
            android:id="@+id/loadBtn"
            app:layout_constraintEnd_toStartOf="@+id/saveBtn"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"
            app:layout_constraintStart_toEndOf="@+id/list_item" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodBtn" app:layout_constraintHorizontal_bias="0.265"
            android:background="#FFFFFF"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/save_icon"
            android:id="@+id/saveBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginRight="44dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodBtn" android:hapticFeedbackEnabled="true"
            android:background="#FFFFFF"/>
    <TextView
            android:text="@string/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadTxt"
            app:layout_constraintTop_toBottomOf="@id/loadBtn" app:layout_constraintStart_toEndOf="@+id/list_item"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.146"/>
    <TextView
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveTxt"
            app:layout_constraintTop_toBottomOf="@id/saveBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/list_item" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.833"/>

</androidx.constraintlayout.widget.ConstraintLayout>